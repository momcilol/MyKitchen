<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SeekBarPreference
        android:id="@+id/number_of_searches"
        android:key="@string/number_of_search_results_key"
        android:max="20"
        android:title="Number of search results"
        app:defaultValue="true"
        app:min="5"
        app:showSeekBarValue="true" />

    <PreferenceCategory android:title="Parameters">

        <ListPreference
            android:id="@+id/diet_preference"
            android:defaultValue="true"
            android:entries="@array/diets"
            android:entryValues="@array/diets"
            android:key="@string/diet_preference_key"
            android:title="Diet"
            android:summary="Choose your diet"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Notification">

    </PreferenceCategory>


</PreferenceScreen>